@using ModelLibrary.Applications;
@model IEnumerable<Application>
@{
	ViewData["Title"] = "Рабочий стол";
	Layout = "_Layout";
}
@functions
{
	void UpdateStatus(int id, ApplicationStatus status)
	{
		var app = Model.FirstOrDefault(u => u.Id == id);
		app.Status = status;
	}
}

<html>
	<head>

	</head>
	<body>
		<h2 class="title">
			@ViewData["Title"]
		</h2>
		<table class="table">
			<tr>
				<th>
					Номер заявки
				</th>
				<th>
					Время заявки
				</th>
				<th>
					Имя
				</th>
				<th>
					Текст заявки
				</th>
				<th>
					Контакты
				</th>
				<th>
					Статус
				</th>
			</tr>
			@foreach(var app in Model)
			{
				<tr>
					<th>
						@app.Id
					</th>
					<th>
						@app.DateTime
					</th>
					<th>
						@app.Name
					</th>
					<th>
						@app.Text
					</th>
					<th>
						@app.Email
					</th>
					<th>
						@app.Status
					</th>
				</tr>
			}
		</table>
	</body>
</html>