@using ModelLibrary.Services
@model ServiceModel
@{
	Layout = "_Layout";
	ViewData["Title"] = "Обновление услуги";
}

<html>
	<body>
		<h2 class="title">@ViewData["Title"]</h2>
		<form asp-action="UpdateService" asp-controller="Service" asp-route-id="@Model.Id" method="post">
			<div class="form-group">
				<label asp-for="Name" class="control-label">Название услуги</label>
				<input asp-for="Name" class="form-control" value="@Model.Name"/>
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Description" class="control-label">Описание</label>
				<input asp-for="Description" class="form-control" value="@Model.Description"/>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Обновить" class="btn btn-primary" />
			</div>
		</form>
	</body>
</html>
