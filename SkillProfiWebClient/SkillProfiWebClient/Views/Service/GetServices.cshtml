@using ModelLibrary.Services
@model IEnumerable<Service>
@{
	Layout = "_Layout";
	ViewData["Title"] = "Услуги";
}

<html>
	<body>
		<h2 class="title">@ViewData["Title"]</h2>
		@foreach(Service service in Model)
		{
			<div class="form-control">
				<details>
					<summary>@service.Name</summary>
					<p>@service.Description</p>
					<a asp-action="UpdateForm" asp-controller="Service" asp-route-id="@service.Id" class="btn btn-primary">Изменить</a>
					<form asp-action="DeleteService" asp-controller="Service" asp-route-id="@service.Id" class="btn btn-primary">
						<input type="submit" value="Удалить" />
						</form>
				</details>
			</div>
		}
	</body>
</html>