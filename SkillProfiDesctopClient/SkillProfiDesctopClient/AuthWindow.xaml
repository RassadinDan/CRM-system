<Window x:Class="SkillProfiDesctopClient.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillProfiDesctopClient"
        mc:Ignorable="d"
        Title="AuthWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="142*"/>
            <ColumnDefinition Width="40*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="45"/>
            <RowDefinition Height="134*"/>
            <RowDefinition Height="45*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>

        <Button x:Name="LogInBut"
                Grid.Column="2"
                Grid.Row="7"
                Margin="5,5,5,5"
                FontSize="18"
                Content="Войти"
                Click="LogInBut_OnClick"></Button>

        <Button x:Name="RegisterBut"
                Grid.Column="1"
                Grid.Row="7"
                Margin="5,5,5,5"
                FontSize="18"
                Content="Зарегистрироваться"
                Click="RegisterBut_OnClick"></Button>

        <TextBlock Grid.Column="1"
                   Grid.Row="3"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Имя пользователя:"/>

        <TextBlock Grid.Column="1"
                   Grid.Row="5"
                   FontSize="18"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Text="Пароль:"/>

        <TextBox x:Name="UsernameBox"
                 Grid.Column="2"
                 Grid.Row="3"
                 Margin="5,5,5,5"
                 FontSize="18"></TextBox>

        <PasswordBox x:Name="PasswdBox"
                     Grid.Column="2"
                     Grid.Row="5"
                     Margin="5,5,5,5"
                     FontSize="18"></PasswordBox>

        <TextBlock Grid.Column="1"
                   Grid.Row="1"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   Text="Вход"></TextBlock>
    </Grid>
</Window>
